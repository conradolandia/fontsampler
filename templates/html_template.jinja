<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description"
              content="Font samples and catalog generated by FontSampler">
        <meta name="keywords" content="fonts, typography, samples, catalog, PDF">
        <title>{{ title | default("Font Samples") }}</title>
    </head>
    <body>
        <!-- Table of Contents -->
        <div class="toc-page">
            <h1>{{ toc_title | default("Table of Contents") }}</h1>
            <div class="toc-entries">
                {% for font in fonts %}
                    <div class="toc-entry">
                        <a href="#font_{{ loop.index0 }}">{{ font.name or font.file }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- Font Pages -->
        {% for font in fonts %}
            {% if font._registered_name %}
                <div class="font-page" id="font_{{ loop.index0 }}">
                    <h1 class="font-header">{{ font.file }}</h1>
                    <div class="font-metadata">
                        <p>
                            <strong>Font Name:</strong> {{ font.name or "N/A" }}
                        </p>
                        <p>
                            <strong>Family:</strong> {{ font.family or "N/A" }}
                        </p>
                        <p>
                            <strong>Version:</strong> {{ font.version or "N/A" }}
                        </p>
                        <p>
                            <strong>Copyright:</strong> {{ font.copyright or "N/A" }}
                        </p>
                    </div>
                    <div class="font-samples">
                        {% for size in sample_sizes %}
                            <div class="sample-text"
                                 style="font-family: '{{ font._registered_name }}', sans-serif;
                                        font-size: {{ size }}px">{{ sample_text }}</div>
                        {% endfor %}
                    </div>
                    <div class="font-paragraph"
                         style="font-family: '{{ font._registered_name }}', sans-serif;
                                font-size: {{ paragraph_size }}px">{{ paragraph_text }}</div>
                </div>
            {% endif %}
        {% endfor %}
    </body>
</html>
